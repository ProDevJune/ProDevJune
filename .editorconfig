# .editorconfig - ProDevJune Blog Project
# 통합 개발 환경 (WSL + Windows + GitHub Pages)에 최적화

root = true

##############################
# 기본 설정 (모든 파일에 적용)
##############################
[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

#########################################
# Markdown: 공백 유지, 리스트 사용 고려
#########################################
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

#########################################
# YAML: Jekyll 설정 파일, 따옴표 정리
#########################################
[*.{yml,yaml}]
indent_style = space
indent_size = 2
quote_type = double

#########################################
# JS / CSS / SCSS: 코드 스타일 정리
#########################################
[*.{js,css,scss}]
indent_style = space
indent_size = 2
quote_type = single

#########################################
# Bash / Shell 스크립트: 줄끝 LF 유지
#########################################
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

#########################################
# Windows 배치 파일: CRLF 강제
#########################################
[*.{cmd,bat}]
indent_style = tab
end_of_line = crlf
